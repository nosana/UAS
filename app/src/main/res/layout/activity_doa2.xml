<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doa2"
    android:background="@drawable/tamplate1">
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Doa sesudah makan"
        android:id="@+id/makan2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/mandi"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Doa Niat Puasa"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mandi"
        />
    <Button
        android:id="@+id/mandi1"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mandi"
        android:layout_marginLeft="20dp"
        android:text="Doa Buka Puasa" />
    <ImageButton
        android:id="@+id/lanjut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/next"
         />
    <ImageButton
        android:id="@+id/kembali1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <ImageButton
        android:id="@+id/home1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/home" />

</RelativeLayout>