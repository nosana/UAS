<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doa3"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/tamplate1">
 <Button
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:text="Doa keluar rumah"
     android:id="@+id/rumah"
     android:layout_centerVertical="true"
     android:layout_centerHorizontal="true"
     android:layout_marginRight="20dp"
     android:layout_toLeftOf="@+id/rumah2"
     />

 <Button
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:text="Doa masuk rumah"
     android:layout_centerVertical="true"
     android:layout_centerHorizontal="true"
     android:id="@+id/rumah2"
     />
 <Button
     android:id="@+id/tua"
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:layout_centerVertical="true"
     android:layout_toRightOf="@+id/rumah2"
     android:layout_marginLeft="20dp"
     android:text="Doa orang tua"/>

 <ImageButton
     android:id="@+id/kembali1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/back"
     android:layout_centerVertical="true"
     android:layout_alignParentLeft="true"
     />


 <ImageButton
     android:id="@+id/home2"
     android:layout_width="70dp"
     android:layout_height="70dp"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="280dp"
     android:background="@drawable/home" />
</RelativeLayout>